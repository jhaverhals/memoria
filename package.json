{
    "name": "memoria",
    "version": "0.0.1",
    "description": "Memoria - Mijn tweede geheugen",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "backend": "npm run dev -w backend",
        "backend:build:watch": "npm run build:watch -w backend",
        "build:watch": "npm run backend:build:watch",
        "__build:watch": "concurrently \"npm run backend:build:watch\" \"npm run backend:build:watch\"",
        "frontend": "npm run dev -w frontend",
        "frontend:build:watch": "npm run dev -w backend",
        "start": "concurrently \"npm run backend\" \"npm run frontend\"",
        "test:backend": "npm test -w backend",
        "test:frontend": "npm test -w frontend"
    },
    "keywords": [],
    "author": "Johan Haverhals",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "workspaces": [
        "backend",
        "frontend"
    ]
}
